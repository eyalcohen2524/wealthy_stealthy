<div class="new-package-dashboard">
  <div class="cards">
    <% @packages.each do |package| %>
    <div class="card">
      <%=  package.name%>
    </div>
    <% end%>
  </div>

  <div class="devise-input">
    <div class="row justify-content-center">
      <div class="form-group col-12-offset-1 col-lg-4 m-3">
        <!-- <div id="package-creator"> -->
          <h3> New Package </h3>

          <%= simple_form_for @package,
          wrapper: :horizontal_form do |f| %>

            <%= f.error_notification %>

            <%= f.input :name, as: :string %>

            <%= f.input :description, as: :text %>

            <%= f.input :content, as: :text  %>

            <%= f.input :price, as: :float %>
          <div class="form-actions btn-flat text-center">
            <%= f.button :submit %>
          </div>
          <div class="btn btn-block btn-outline-secondary text-center my-3" >
            <%= f.button :button, "Cancel", type: "reset" %>
          </div>
          <% end %>
        <!-- </div> -->
      </div>
    </div>
  </div>
</div>





