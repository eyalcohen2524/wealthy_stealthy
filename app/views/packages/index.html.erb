
<div class="row">
  <div class="col-8 offset-2">
    <h1>Available Packages</h1>
    <p>Find the right wealthy package for you</p>

    <div class="row">
      <% @packages.each do |package| %>
        <div class="col-12 col-md-4">
          <div>
            <%= link_to package.name, package_path(package) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
