<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="text-center">
        <h1>Available Packages</h1>
        <p style="font-family: 'slim joe'">Find the right wealthy package for you</p>
      </div>

      <br>
      <br>


      <div class="row">
        <% @packages.each do |package| %>
          <div class="col-12 col-md-4">
            <%= link_to package_path(package) do %>
            <!-- coming in as nil now. need to improve to show image -->
              <div class="demo-card" style="background-image: url('<% cl_image_path package.photos.first.key, height: 300, width: 400, crop: :fill %>');">
                <h5><%= package.name %></h5>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

