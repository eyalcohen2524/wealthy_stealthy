
<div class="row">
  <div class="col-8 offset-2">
    <h1>Available Packages</h1>
    <p>Find the right wealthy package for you</p>

    <div class="row">
      <% @packages.each do |package| %>
        <div class="col-12 col-md-4">
          <%= link_to package_path(package) do %>
            <div style="background-color: $mist;" class="p-3 mb-3">
              <p><%= package.name %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
