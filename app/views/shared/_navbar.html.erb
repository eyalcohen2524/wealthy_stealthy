      <div class ="navbar-btns">
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-flat" %>
      </div>
      <% elsif request.fullpath == "/users/sign_up" && user_signed_in? != true %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-gradient" %>
      <%else%>
      <li class="nav-item">
        <%= link_to "Browse", packages_path, class: "nav-link" %>
